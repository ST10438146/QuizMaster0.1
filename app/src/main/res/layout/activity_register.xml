<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="283dp"
        android:layout_height="92dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="QuizMaster Logo"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="QuizMaster"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Your mobile trivia companion"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toggleTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_toggle_bg"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btn_login_tab_go"
            android:layout_width="11dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Login"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_register_tab"
            android:layout_width="34dp"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:background="@drawable/active_tab_button"
            android:text="Register"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvRegUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggleTabs" />

    <EditText
        android:id="@+id/etRegUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose a username"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="16dp"
        android:background="@drawable/rounded_input_field"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvRegUsername" />

    <TextView
        android:id="@+id/tvRegEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etRegUsername" />

    <EditText
        android:id="@+id/etRegEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="16dp"
        android:background="@drawable/rounded_input_field"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvRegEmail" />

    <TextView
        android:id="@+id/tvRegPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etRegEmail" />

    <EditText
        android:id="@+id/etRegPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create a password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="16dp"
        android:background="@drawable/rounded_input_field"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvRegPassword" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Register"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        android:layout_marginTop="32dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/etRegPassword" />

    <TextView
        android:id="@+id/tvRegSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or continue with"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRegSeparator">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnRegFingerprint"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Fingerprint"
                android:drawableStart="@drawable/ic_fingerprint"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/btnRegFaceId"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Face ID"
                android:drawableStart="@drawable/ic_face_id"
                android:layout_marginStart="8dp"
                app:cornerRadius="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btnRegGoogleSignIn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_google"
                android:contentDescription="Google Sign In"
                android:background="@drawable/rounded_sso_button_bg"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/btnRegEmailLogin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Email Login"
                android:background="@drawable/rounded_sso_button_bg"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>