<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Quest Type -->
        <TextView
            android:id="@+id/tvQuestType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY QUEST"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="4dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvQuestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Win 5 Games"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvQuestDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete 5 games to earn 100 XP"
            android:layout_marginBottom="8dp" />

        <!-- Progress Label -->
        <TextView
            android:id="@+id/tvQuestProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/5"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressQuest"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="40"
            android:progressTint="@color/purple_700"/>

        <!-- Claim Reward Button -->
        <Button
            android:id="@+id/btnClaimReward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Reward"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
